<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="essential" addfieldpath="/administrator/components/com_twins/models/fields">

    </fieldset>

    <fieldset>

        <field
                name="id"
                type="hidden"
        />
        <field
                name="name"
                type="text"
                default=""
        />
        <field
                name="company_id"
                type="sql"
                default="10"
                label="Select an company"
                query="SELECT id, company_name FROM #__company"
                key_field="id"
                value_field="company_name"
        >
            <option value=""> - Begin te selecteren G - </option>
        </field>
        <field
                name="phone_number"
                type="text"
                default=""
        />
        <field
                name="emailadres"
                type="email"
                default=""
        />
        <field
                name="zip_code"
                type="text"
                default=""
        />
        <field
                name="adress"
                type="text"
                default=""
        />

    </fieldset>
</form>